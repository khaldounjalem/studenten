{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Father</th>
                <td>{{ student.father }}</td>
            </tr>
            <tr>
                <th>Mother</th>
                <td>{{ student.mother }}</td>
            </tr>
            <tr>
                <th>Place & Date Of Birth</th>
                <td>{{ student.placedateofbirth }}</td>
            </tr>
            <tr>
                <th>Studying</th>
                <td>{{ student.studying }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ student.nationality }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ student.telephone }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ student.adress }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ student.createdAt ? student.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ student.updatedAt ? student.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('student_index') }}">back to list</a>

    <a href="{{ path('student_edit', {'id': student.id}) }}">edit</a>

    {{ include('student/_delete_form.html.twig') }}
{% endblock %}
