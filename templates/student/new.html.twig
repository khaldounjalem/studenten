{% extends 'base.html.twig' %}

{% block title %}New Student{% endblock %}

{% block body %}
    <p>Create new Student</p>

   <div class="container-fluid ">
            {{ form_start(form) }}
        <div class="row mb-1">
                <div class="col-4">
                        {{ form_row(form.fullname) }}
                </div>        
                <div class="col-4">
                        {{ form_row(form.numstudent) }}
                </div>        

                <div class="col-4">
                        {{ form_row(form.father) }}
                </div>                
        </div>
        <div class="row mb-1">
                <div class="col-4">
                        {{ form_row(form.mother) }}
                </div>
                <div class="col-4">
                        {{ form_row(form.placeofbirth) }}
                </div>        
                <div class="col-4">
                        {{ form_row(form.dateofbirth) }}
                </div>                         
        </div> 
        <div class="row mb-1">
                <div class="col-6">
                        {{ form_row(form.studying) }}
                </div>
                <div class="col-6">
                        {{ form_row(form.nationality) }}
                </div>                
        </div>  
        <div class="row mb-1">
                <div class="col-4">
                        {{ form_row(form.telephone) }}
                </div>
                <div class="col-8">
                        {{ form_row(form.adress) }}
                </div>                
        </div>              
                        <button class="btn">{{ button_label|default('Save') }}</button>
                        {{ form_end(form) }}
    </div>

    <a href="{{ path('student_index') }}">back to list</a>
{% endblock %}
