{% extends 'base.html.twig' %}
{% block title %}Upload Brochure!{% endblock %}
{% block body %}

    <dir class="container">
            <p>Adding a new brochure</p>
            {{ form_start(form) }}        
        <div class="row mb-3">
            <div class="col-8">
                {{ form_row(form.brochure) }}
            </div>    
            <div class="col-2">  
            <button class="btn btn-primary mt-1">{{ button_label|default('Submit') }}</button> 
            </div>                              
                {{ form_end(form) }}
        </div>
    </dir>
<dir class="container">
    <table class="table table-hover mt-2">
        <thead>
            <tr>
            <th scope="col">No</th>
            <th colspan="2" scope="col">brochure</th>
            <th scope="col">Created At</th>
            <th  scope="col">action</th>
            </tr>
        </thead>
        <tbody>
        {% for s in products %}
          {% set counter = ( counter | default(0) ) + 1 %}
          <tr>
            <th scope="row">{{counter}}</th>
                <td>{{ s.brochureFilename }}</td>
                <td>
                <a href="{{ asset('uploads/brochures/' ~ s.brochureFilename) }}">View brochure (PDF)</a>
                </td>
                <td>{{ s.createdAt | date('d-m-y')}} Uhr {{ s.createdAt | date('H:i')}}</td>
                <td>
                <a  href="/product/delete/{{s.id}}" class="btn " ">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </dir>
{% endblock %}
