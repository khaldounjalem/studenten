    <p>Edit Payment</p>
    <div class="container-fluid ">
            {{ form_start(form) }}
        <div class="row mb-3">
                <div class="col-6">
                        {{ form_row(form.student) }}
                </div>
                <div class="col-6">
                        {{ form_row(form.amount) }}
                </div>                
        </div>
        <div class="row mb-3">
                <div class="col-6">
                        {{ form_row(form.numpayment) }}
                </div>
                <div class="col-6">
                        {{ form_row(form.type) }}
                </div>                
        </div> 
        <div class="row mb-3">
                <div class="col-4">  
                        {{ form_row(form.notes) }}     
                </div>  
                <div class="col-8">  
                        {{ form_row(form.artcours) }}     
                </div>                 
        </div> 
                        <button class="btn">{{ button_label|default('Update') }}</button>
